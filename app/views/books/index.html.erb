<body>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @books.each do |book|%>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to 'Show', book_path(book.id) %></td>
          <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
          <td><%= link_to 'Destroy', book_path(book.id), method: :delete %></td>
        <% end %>
      </tr>
    </tbody>
  </table>

  <h2>New book</h2>
  <div id="errors_explanation">
    <% if @book.errors.any? %>
        <h2><%= @book.errors.count %>errors prohibited book from being saved:
            <% @book.errors.full_messages.each do |message| %>
        </h2>
      <ul><li><%= message %></li></ul>
      <% end %>
    <% end %>
  </div>
  
  <!--form_with部分-->
  <%= form_with model: @book, url:'/books', local:true do |f| %>
    <div class="field">
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Body</p>
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit 'Create book' %>
    </div>
    </div>
  <% end %>
</body>