<h1>Editing Book</h1>

    <% if @book.errors.any? %>
    <div id="errors_explanation">
        <h2><%= @book.errors.count %>errors prohibited book from being saved:</h2>
        <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
    <% end %>


<!--form_with部分-->
<%= form_with model:@book, local:true do |f| %>
  <div class="field">
    <lavel for="book_title">Title</lavel>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <lavel for="book_body">Body</lavel>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>
<%= link_to 'Show', book_path(@book.id) %>
